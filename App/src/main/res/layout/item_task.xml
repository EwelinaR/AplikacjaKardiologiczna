<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lilac"
        android:padding="8dp">

        <CheckBox
            android:id="@+id/checkbox_item_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="2dp"
            android:padding="0dp"
            android:scaleX="2.2"
            android:scaleY="2.4" />

        <ImageView
            android:id="@+id/image_view_item_task"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/checkbox_item_task"
            tools:src="@drawable/ic_run" />

        <TextView
            android:id="@+id/text_view_item_task_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/image_view_item_task"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Task name" />

        <TextView
            android:id="@+id/text_view_item_task_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_item_task_name"
            android:layout_toEndOf="@id/image_view_item_task"
            android:textColor="@android:color/black"
            tools:text="Task description" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
